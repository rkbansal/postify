# AI Service Configuration
# Choose between OpenAI or OpenRouter
AI_SERVICE=openrouter

# OpenAI API Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API Configuration (if using OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_PREFER_FREE=true
OPENROUTER_MAX_RETRIES=3
OPENROUTER_RETRY_DELAY=1000
OPENROUTER_APP_NAME=Postify
OPENROUTER_SITE_URL=http://localhost:3001

# Rate Limiting Configuration
RATE_LIMIT_RPM=10

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# Development: All localhost ports are automatically allowed
# Production: Specify allowed origins (comma-separated for multiple)
CLIENT_URL=http://localhost:5173
# CLIENT_URL=https://your-frontend.vercel.app,https://your-custom-domain.com

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/postify
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/postify

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=/auth/google/callback
